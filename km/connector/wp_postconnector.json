{
  "$id": "wp_postconnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "WordPress",
  "entityType": "wp_post",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{WP_SITEURL}}/wp-json/wp/v2/posts",
        "paginationControl": {
          "cursorPagination": {
            "cursor": "links.next",
            "cursorType": "FULL_URL",
            "detectCursorInHeader": false
          }
        },
        "headers": {
          "Accept": "application/vnd.api+json",
          "Content-Type": "application/vnd.api+json"
        },
        "queryParams": {
          "per_page": "5"
        },
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "wp_posts",
      "path": "wp_posts"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Title",
        "path": "title.rendered"
      },
      {
        "type": "JSON",
        "header": "Content",
        "path": "content.rendered"
      },
	  {
        "type": "JSON",
        "header": "Permalink",
        "path": "link"
      }
    ]
  },
  "mappings": [
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "body",
      "header": "Content",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Title",
      "subfieldPath": []
    },
	{
      "field": "wp_permalink",
      "header": "Permalink",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
		"timeZone": "America/New_York",
		"startDate": "2021-09-14",
		"startTime": "03:00",
		"frequencyType": "DAILY"
	},
    "runMode": "DEFAULT"
  }
}